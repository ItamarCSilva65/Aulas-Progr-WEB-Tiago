<h1 class="page-title">Cursos em Destaque</h1>
<p style="text-align: center; margin-bottom: 40px; color: var(--secondary-color);">Os treinamentos mais buscados pelas
    empresas focadas em certificação de classe mundial.</p>

<section id="cursos-lista" class="courses-section">
    <div class="grid-courses">
        {{#each courses}}
        <article class="course-card">
            <div class="card-image">
                <span class="badge-destaque"
                    style="position: absolute; background: #f1c40f; color: #333; padding: 5px 10px; font-weight: bold; border-bottom-right-radius: 8px;">Mais
                    Vendido</span>
                <img src="{{this.img}}" alt="{{this.nome}}"
                    style="border-top-left-radius: 8px; border-top-right-radius: 8px;">
            </div>
            <div class="card-content">
                <h3>{{this.nome}}</h3>
                <p class="course-subtitle">{{this.titulo_completo}}</p>
                <div class="card-footer" style="flex-wrap: wrap; gap: 10px;">
                    <span class="price">{{formatCurrency this.preco}}</span>
                    <div style="display: flex; gap: 10px; width: 100%; justify-content: flex-end;">
                        <a href="/curso/{{this.id}}" class="btn btn-primary"
                            style="padding: 8px 15px; font-size: 0.9rem;">Ver Detalhes</a>
                        <a href="/carrinho?add={{this.id}}" class="btn btn-success"
                            style="padding: 8px 15px; font-size: 0.9rem;">Adicionar ao Carrinho</a>
                    </div>
                </div>
            </div>
        </article>
        {{else}}
        <p style="text-align: center; width: 100%;">Nenhum curso em destaque no momento.</p>
        {{/each}}
    </div>
</section>
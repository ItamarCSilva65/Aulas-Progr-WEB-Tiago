<section class="auth-section container">
    <div class="auth-container">
        <!-- Form Log In -->
        <div class="auth-box login-box">
            <h2>Acessar Minha Conta</h2>
            <p>Faça login para continuar seus estudos ou visualizar certificados.</p>
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="login-email">E-mail</label>
                    <input type="email" id="login-email" name="email" required placeholder="Seu e-mail de cadastro">
                </div>
                <div class="form-group">
                    <label for="login-password">Senha</label>
                    <input type="password" id="login-password" name="password" required placeholder="Sua senha">
                </div>
                <div class="form-actions">
                    <a href="#" class="forgot-password">Esqueci minha senha</a>
                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                </div>
            </form>
        </div>

        <!-- Formulário Sign Up -->
        <div class="auth-box register-box">
            <h2>Criar Conta</h2>
            <p>Cadastre-se para comprar cursos de normas ISO e turbinar seu currículo.</p>
            <form action="#" method="POST">
                <div class="form-group">
                    <label for="reg-name">Nome Completo</label>
                    <input type="text" id="reg-name" name="name" required placeholder="Ex: João da Silva">
                </div>
                <div class="form-group">
                    <label for="reg-email">E-mail</label>
                    <input type="email" id="reg-email" name="email" required placeholder="Melhor e-mail">
                </div>
                <div class="form-group">
                    <label for="reg-password">Senha</label>
                    <input type="password" id="reg-password" name="password" required
                        placeholder="Crie uma senha forte">
                </div>
                <button type="submit" class="btn btn-success btn-block">Cadastrar e Continuar</button>
            </form>
        </div>
    </div>
</section>